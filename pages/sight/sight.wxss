/* pages/sight/sight.wxss */
.sight .info{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #333;
  color: #fefefe;
  font-size: 12px;
}
.sight .img-wrap{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}
.sight .img-wrap .left{
  font-size: 10px;
  width:60rpx;
  display:flex;
  justify-content:center;
  align-items: center;
}
.sight .img-wrap .right{
  font-size: 10px;
  width:60rpx;
  display:flex;
  justify-content:center;
  align-items: center;
}
.sight .img-wrap .img {
  width:100%;
  height: 500rpx;
  display: flex;
  align-items: center;
  justify-content:center;
  border-right:1px solid #888;
  border-left:1px solid #888;
}
.sight .img-wrap .img .sight-img{
  /* width: 100px; */
}
.sight .ruler{
  background: #bbb;
  width: 100%;
  height: 50rpx;
}
.sight .submit-btn{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}
.sight .submit-btn button{
  width: 100rpx;
  border-radius: 100rpx;
  font-size: 16px;
  height: 60rpx;
  line-height: 60rpx;
  background: linear-gradient(to right, #008aff , #00ccff);
  color:#fefefe;
  border: none;
  margin: 10rpx;
}
.sight .submit-btn .greybtn{
  background: #888;
  width: 120rpx;
  font-size: 12px;
}
.sight .submit-btn .center{
  display: flex;
  flex-direction: row;
}