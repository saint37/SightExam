/* pages/result/result.wxss */
.result-wrap{
  width:60%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx;
  margin:30rpx;
  box-shadow: 0px 0px 5px #bbb;
}
.result-wrap .title{
  font-size: 16px;
  color: #888;
}
.result-list{
  display: flex;
  flex-direction: row;  
  padding:20rpx;
  font-size: 16px;
}
.submit-btn{
  text-align: center;
}
.submit-btn button{
  width: 400rpx;
  border-radius: 100rpx;
  font-size: 16px;
  height: 60rpx;
  line-height: 60rpx;
  background: linear-gradient(to right, #008aff , #00ccff);
  color:#fefefe;
  border: none;
}
.submit-btn text{
  color: #bbb;
  font-size: 12px;
}